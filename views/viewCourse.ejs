<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Document</title>
</head>

<body>
    <h3>Courses</h3>
    <form action="/viewCourse" method="post">
        <table>
            <tr>
                <th>SR No</th>
                <th>Name</th>
                <th>Code</th>
                <th>Credits</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

            <% if (course.length==0) {%>
                <tr>
                    <td colspan="6">
                        No courses found
                    </td> 
                </tr>
            <% } %>

            <% for (var i=0; i <course.length; i++) { %>
                <tr>
                    <td>
                        <%= i+1 %>
                    </td>
                    <td>
                        <%= course[i].name %>
                    </td>
                    <td>
                        <%= course[i].code %>
                    </td>
                    <td>
                        <%= course[i].credits %>
                    </td>
                    <td>
                        <button type='submit' name="edit" value="<%= course[i].id %>"><i
                                class='far fa-edit'></i></button>
                    </td>
                    <td>
                        <button type='submit' name="delete" value="<%= course[i].id %>" class="delete-btn"><i
                                class='far fa-trash-alt'></i></button>
                    </td>
                </tr>
                <% } %>
        </table>
    </form>

    <br>
    <button onclick="window.location.href = '/addCourse'"> Add course </button>

    <script src="https://kit.fontawesome.com/2bdd553bc7.js" crossorigin="anonymous"></script>
    <script>
        let btns = document.getElementsByClassName('delete-btn');

        for (i of btns) {
            i.addEventListener('click', function () {
                if (!confirm("Are you sure you want to delete?")) {
                    event.preventDefault();
                }
            });
        }
    </script>
</body>

</html>